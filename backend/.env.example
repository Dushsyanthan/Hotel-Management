# Le Mans Hotel Management System - Environment Variables Template
# 
# Instructions:
# 1. Copy this file to `.env` in the same directory
# 2. Update all values with your actual credentials
# 3. NEVER commit the `.env` file to version control
# 4. Keep this `.env.example` file for reference

#====================================================================================
#                            DATABASE CONFIGURATION
#====================================================================================

# Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=test_db
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# Full Database URL (constructed from above variables)
# Format: jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}?useSSL=false&allowPublicKeyRetrieval=true
spring.datasource.url=jdbc:mysql://localhost:3306/test_db?useSSL=false&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=your_database_password_here

#====================================================================================
#                            HIBERNATE/JPA CONFIGURATION
#====================================================================================

# Hibernate DDL Auto (create, create-drop, update, validate, none)
# Use 'update' for development, 'validate' for production
HIBERNATE_DDL_AUTO=update

# Show SQL queries in console (true/false)
# Set to false in production
SHOW_SQL=true

#====================================================================================
#                            EMAIL/SMTP CONFIGURATION
#====================================================================================

# Gmail SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password_here

# Note: For Gmail, you need to generate an App-Specific Password
# Go to: Google Account > Security > 2-Step Verification > App Passwords

#====================================================================================
#                            APPLICATION CONFIGURATION
#====================================================================================

# Application Name
APP_NAME=Le_mans_Hotel_Management

# Server Port (default: 8080)
SERVER_PORT=8080

# Application Environment (development, staging, production)
APP_ENV=development

#====================================================================================
#                            SECURITY CONFIGURATION
#====================================================================================

# JWT Secret Key (Generate a strong random string for production)
# You can generate one using: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# JWT Expiration Time (in milliseconds)
# Default: 86400000 (24 hours)
JWT_EXPIRATION=86400000

#====================================================================================
#                            CORS CONFIGURATION
#====================================================================================

# Allowed Origins (comma-separated)
# For development, you can use *
# For production, specify exact origins
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

#====================================================================================
#                            FILE UPLOAD CONFIGURATION
#====================================================================================

# Maximum file upload size (in MB)
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

#====================================================================================
#                            LOGGING CONFIGURATION
#====================================================================================

# Log Level (ERROR, WARN, INFO, DEBUG, TRACE)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/application.log

#====================================================================================
#                            PRODUCTION SETTINGS
#====================================================================================

# When deploying to production, update these:
# - Change DB_PASSWORD to production database password
# - Change MAIL_PASSWORD to production email credentials
# - Generate a new JWT_SECRET
# - Set HIBERNATE_DDL_AUTO=validate
# - Set SHOW_SQL=false
# - Set LOG_LEVEL=WARN or ERROR
# - Update CORS_ALLOWED_ORIGINS with production URL
